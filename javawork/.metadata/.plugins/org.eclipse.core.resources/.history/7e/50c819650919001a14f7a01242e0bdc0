package Test;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner A = new Scanner(System.in);
		int Ainput = A.nextInt();
		int Binput = A.nextInt();
		int Cinput = A.nextInt();
		A.close();
		
		System.out.println((Ainput+Binput)%Cinput);
		System.out.println( (Ainput%Cinput + Binput%Cinput)%Cinput);
		System.out.println((Ainput*Binput)%Cinput);
		System.out.println((Ainput%Cinput * Binput%Cinput)%Cinput);
		


	}

}

