package oop.Chap06;
//Person클래스를 사용하는 클래스
public class PersonTest {

	public static void main(String[] args) {
		Person p1 = new Person();			//new 연산자
		p1.name = "장동건";
		p1.addr = "서울시";
		p1.age = 45;						//age변수는 private으로 선언되어있으므로 접근할 수 없다.
											//같은 패키지의 클래스에서도 접근할 수 없다.
		System.out.println("성명 :"+p1.name);
		System.out.println("주소 :"+p1.addr);
		System.out.println("나이 :"+p1.age);
		
		Person p2 = new Person();			//new 연산자
		p2.name = "김서연";
		p2.addr = "인천시";
		p2.age = 25;
		System.out.println("성명 :"+p2.name);
		System.out.println("주소 :"+p2.addr);
		System.out.println("나이 :"+p2.age);
	}

}
