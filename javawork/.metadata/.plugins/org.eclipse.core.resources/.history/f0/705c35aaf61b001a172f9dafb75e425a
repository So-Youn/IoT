package workbook.ClassTest;

public class Company {
	private double salary;
	double Sum=0.0;
	double bonus=0.0;
	double annualIncome=0.0;
	double afterTaxIncome=0.0;
	double afterTaxBonus=0.0;
	
	public Company() {	
	}
	public Company (double salary) {
	this.salary = salary;
	}
	
	public double getSalary() {
		return salary;
	}
	public void setSalary(double salary) {
		this.salary = salary;
	}
	
	public double getBonus() {
		return bonus=this.salary*0.2*4;
	}
	
	public double getIncome() {
		double Sum= this.salary*12;
		return Sum ;
	}
	public double getAfterTaxIncome(){
		double afterTaxIncome = Sum - (Sum*0.1);
		return afterTaxIncome ;
	}
	public double getAfterTaxBonus() {
		double afterTaxBonus = bonus-bonus*0.055;
		return afterTaxBonus;
	}
	
	
}
