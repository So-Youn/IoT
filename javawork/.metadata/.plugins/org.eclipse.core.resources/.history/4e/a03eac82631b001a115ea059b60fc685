package Test;

import java.util.Scanner;

public class Main02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		for(int i=1;i<=T;i++) {
			int A = sc.nextInt();
			int B = sc.nextInt();
			switch(i) {
			case i : System.out.println(A+B);
			break;
			}
			
		}
		sc.close();
		
	}

}